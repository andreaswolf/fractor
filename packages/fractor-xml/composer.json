{
    "name": "a9f/fractor-xml",
    "description": "XML extension for the File Read-Analyse-Change Tool. Allows modifying XML files",
    "license": "MIT",
    "type": "fractor-extension",
    "authors": [
        {
            "name": "Andreas Wolf",
            "email": "dev@a-w.io",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-dom": "*",
        "ext-xml": "*",
        "a9f/fractor": "^0.4.1",
        "a9f/fractor-extension-installer": "^0.4.1",
        "shanethehat/pretty-xml": "^1.0.2",
        "symplify/rule-doc-generator-contracts": "^11.2",
        "webmozart/assert": "^1.11"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "a9f\\FractorXml\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "a9f\\FractorXml\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "a9f/fractor-extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.4-dev"
        }
    }
}
